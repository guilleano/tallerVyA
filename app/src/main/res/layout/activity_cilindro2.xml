<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.redes.volumenesyareas.Cilindro2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtCilindro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="@string/cilindro"
            android:text="Cilindro"
            android:textAlignment="center"
            android:textSize="36dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtCilindro"
            android:layout_alignRight="@+id/txtCilindro"
            android:layout_below="@+id/txtCilindro"
            android:layout_weight="0.04"
            android:hint="@string/resultado"
            android:text="@string/resultado"
            android:textAlignment="center"
            android:textSize="24dp" />

        <LinearLayout
            android:id="@+id/txtValorRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtResultado"
            android:layout_alignStart="@+id/txtResultado"
            android:layout_below="@+id/txtResultado"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.08">

            <TextView
                android:id="@+id/txtVolumen"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="0.36"
                android:hint="@string/volumen"
                android:text="@string/volumen"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCajaResultado"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.55"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtResultado"
            android:layout_alignLeft="@+id/txtValorRadio"
            android:layout_alignRight="@+id/txtResultado"
            android:layout_alignStart="@+id/txtValorRadio"
            android:layout_below="@+id/txtValorRadio"
            android:onClick="VolverCilindro"
            android:text="Ok"
            android:textAlignment="center" />
    </LinearLayout>

</RelativeLayout>
