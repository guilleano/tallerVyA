<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.redes.volumenesyareas.Circulo1">

    <TextView
        android:id="@+id/txtCirculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Circulo"
        android:text="Circulo"
        android:textAlignment="center"
        android:textSize="36dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtValorRadio"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:layout_below="@+id/txtCirculo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/txtvValorRadio"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtCirculo"
            android:hint="@string/valorRadio"
            android:text="Valor del Radio"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtCajaRadio"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/txtValorRadio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp">

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/calcular"
            android:onClick="Circulo1"
            android:text="Calcular" />

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/borrar"
            android:onClick="Borrar"
            android:text="Borrar" />
    </LinearLayout>

</RelativeLayout>
